<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_descuento_compras_form_view" model="ir.ui.view">
        <field name="name">wizard.descuento.compras.form</field>
        <field name="model">wizard.descuento.compras</field>
        <field name="arch" type="xml">
            <form string="Aplicar descuento">
                <group>
                    <field name="orden_compra" readonly="1"/>
                    <field name="descuento"/>
                </group>
                <footer>
                    <button name="confirm_descuento"
                            string="Aplicar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_wizard_descuento" model="ir.actions.act_window">
        <field name="name">Aplicar Descuento</field>
        <field name="res_model">wizard.descuento.compras</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
